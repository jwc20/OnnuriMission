---
import Footer from "../components/Footer.astro";
import banner from "../../public/sky3.jpg"
import logo from "../../public/onnuri_new-logo_V5.png"

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <link href="https://fonts.googleapis.com/css?family=Nanum+Gothic+Coding:400" rel="stylesheet">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>온누리교회</title>
        <link rel="icon" type="image/png" href="/OnnuriMission/onnuri_new-logo_V5.png" />
        <meta property="og:title" content="온누리교회" />
        <meta property="og:description" content="전도콜센터" />
        <meta property="og:type" content="website" />
        <meta property="og:image" content="https://jwc20.github.io/OnnuriMission/kakao.webp" />
        <meta property="og:image:type" content="image/webp" />
        <meta property="og:image:width" content="200" />
        <meta property="og:image:height" content="80" />
        <meta property="og:image:alt" content="Onnuri" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <div style="position: relative; width: 100%; margin-bottom: 2rem;">
            <img src={banner.src} alt="온누리전도학교" style="width: 100%;" />
            <img src={logo.src} alt="온누리로고" style="position: absolute; top: 44.5%; right: 10%; width: 5%; height: auto;" />
            <figcaption style="font-weight: bold; font-family: 'Nanum Gothic Coding'; position: absolute; top: 60%; left: 50%; transform: translate(-50%, -50%); font-size: 4.5vw; text-align: center;">전도콜센터</figcaption>
        </div>

        <slot />
        
        <div class="footer"><Footer /></div>
    </body>
</html>

<style is:global>
    html {
        font-family: "Noto Sans", sans-serif;
    }

    body {
        margin: auto;
        /* padding: 2rem 0; */
        font-size: 18px;
    }

    img {
        max-width: 100%;
        height: auto;
        display: block;
        margin: 0 auto;
    }

    @media (max-width: 1000px) {
        body {
            font-size: 12px;
        }
    }

    .footer {
        font-size: 12px;
        text-align: center;
        margin-top: 2rem;
        color: rgba(0, 0, 0, 0.4);
        a {
            color: rgba(0, 0, 0, 0.4);
        }
    }

    code {
        font-family: "Fira Code", monospace;
    }
</style>
