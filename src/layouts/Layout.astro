---
import Footer from "../components/Footer.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Onnuri Church" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/onnuri_new-logo_V5.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <slot />
        <div class="footer"><Footer /></div>
    </body>
</html>

<style is:global>
    html {
        font-family: "Noto Sans", sans-serif;
        background: #f5f5f5;
        background-size: cover;
        color: #333;
    }

    body {
        margin: auto;
        /* padding: 3rem; */
        font-size: 18px;
    }

    img {
        max-width: 100%;
        height: auto;
        /* center */
        display: block;
        margin: 0 auto;
    }

    .footer {
        font-size: 12px;
        text-align: center;
        margin-top: 2rem;
        color: rgba(0, 0, 0, 0.4);
        a {
            color: rgba(0, 0, 0, 0.4);
        }
    }

    code {
        font-family: "Fira Code", monospace;
    }
</style>
